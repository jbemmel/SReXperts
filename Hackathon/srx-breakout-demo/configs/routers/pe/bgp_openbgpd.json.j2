{
    {% if node_name == openbgpd_peer %}
    "nokia-conf:configure": {
        "router": [
            {
                "router-name": "Base",
                "autonomous-system": 65505,
                "bgp": {
                    "admin-state": "enable",
                    "group": [
                        {
                            "group-name": "openbgpd",
                            "admin-state": "enable",
                            "peer-as": 65505,
                            "next-hop-self": true
                        }
                    ],
                    "neighbor": [
                        {
                            "ip-address": "192.254.255.1",
                            "group": "openbgpd"
                        }
                    ]
                }
            }
        ]
    }
    {% endif %}
}
